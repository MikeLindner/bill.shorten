{
  "name": "bill-shorten",
  "version": "1.0.0",
  "description": "Mike's URL Shortener - mikes.page",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux"
  },
  "author": "Mike Lindner",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0"
  },
  "build": {
    "appId": "com.mikelindner.billshorten",
    "productName": "Bill Shorten",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!dist/**"
    ]
  }
}
